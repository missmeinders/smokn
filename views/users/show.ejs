<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>
    <div class="container">
      <div class="profileView">
      <div class="row">
        <div class="six columns">
          <img src="<%= user.photo_url %>" width="300" />
          <h3><%= user.username %></h3>
        </div>
      </div>
      <div class="row">
        <div class="six columns">
          <%= user.birthday %>
          <%= user.userDescription %>
          <%= user.type %>
          <%= user.gender %>
        </div>
      </div>
      <div class="row">
        <div class="six columns">
<!-- link to edit and delete -->
          <a href="/users/<%= user._id %>/edit">Edit</a>
        </div>
      </div>
    </div>
    </div>
  </body>
</html>
